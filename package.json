{
  "name": "@samatech/ismedia-nft-contracts",
  "version": "0.1.0",
  "description": "ERC1155, ERC721, and management contracts for isMedia Ethereum NFTs",
  "author": "SamaTech",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "lint": "node_modules/.bin/eslint ./test *.js",
    "lint:solidity": "npx hardhat check",
    "backup-contracts": "node scripts/backup-contracts.js",
    "deploy-contracts": "npx hardhat run --network localRPC scripts/deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samatech/ismedia-nft-contracts"
  },
  "dependencies": {
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.8.9",
    "hardhat-gas-reporter": "^1.0.4",
    "solc": "^0.8.3",
    "solidity-coverage": "^0.7.16"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eth-gas-reporter": "^0.2.22",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.1"
  }
}
